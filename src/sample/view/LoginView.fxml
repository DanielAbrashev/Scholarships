<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="229.0" prefWidth="391.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.LoginController">
   <children>
      <VBox layoutX="4.0" prefHeight="400.0" prefWidth="600.0" spacing="50.0">
         <children>
            <TextField fx:id="nickname" prefHeight="10.0" prefWidth="282.0" promptText="Прякор">
               <VBox.margin>
                  <Insets bottom="-25.0" left="100.0" right="100.0" top="45.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="password" prefHeight="25.0" prefWidth="454.0" promptText="Парола">
               <VBox.margin>
                  <Insets left="100.0" right="100.0" />
               </VBox.margin>
            </PasswordField>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#login" prefHeight="25.0" prefWidth="53.0" text="Вход">
                     <HBox.margin>
                        <Insets left="170.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="exitButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#exit" text="Изход">
                     <HBox.margin>
                        <Insets left="50.0" right="50.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
